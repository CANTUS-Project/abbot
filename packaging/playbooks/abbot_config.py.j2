# These settings are modified automatically by Ansible.
scheme = '{{ abbot_scheme }}'
hostname = '{{ abbot_hostname }}'
port = {{ abbot_port }}
cors_allow_origin = '{{ abbot_cors_origin }}'
drupal_url = '{{ abbot_drupal_url }}'
solr_url = '{{ abbot_solr_url }}'


# Don't touch these.
debug = False
logging = 'warning'
drupal_type_map = {
    'portfolio': None,
    'siglum': 'rism',
    'source_status': 'source-status',
}
